<MyLabel@Label>:
    text_size: self.size
    halign: "left"

BoxLayout:

    MineGrid:
        id: mine_area
        msize: _size_slider.value
        mines: _mine_slider.value

        rows: 15
        cols: 15
        size_hint_x: None
        width: self.height

    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 20
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {"top": 1}

        MyLabel:
            markup: True
            text: "[b]Sweep\nThy\nMines![/b]"
            font_size: "35dp"
            size_hint_y: None
            height: 135
            halign: "center"

        BoxLayout:
            size_hint_y: None
            height: self.minimum_height

            MyLabel:
                text: "Size (side)"
                size_hint: None, None
                size: 50, 60

            BoxLayout:
                orientation: "vertical"

                Label:
                    text: "{} / {}".format(_size_slider.value, _size_slider.max)

                Slider:
                    id: _size_slider

                    min: 5
                    max: 20
                    value: 15
                    step: 1

                    on_value:
                        _mine_slider.max = int(.3 * self.value ** 2)
                        _mine_slider.value = int(.15 * self.value ** 2)

        BoxLayout:
            size_hint_y: None
            height: self.minimum_height

            MyLabel:
                text: "Mines"
                size_hint: None, None
                size: 50, 60

            BoxLayout:
                orientation: "vertical"

                Label:
                    text: "{} / {}".format(_mine_slider.value, _mine_slider.max)

                Slider:
                    id: _mine_slider

                    min: 1
                    max: 67
                    value: 33
                    step: 1

        Button:
            text: "New Game"
            size_hint_y: None
            height: 50
            on_release: mine_area.new_game()
